<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:orientation="vertical"
            tools:context=".ui.profile.AddNewExerciseFragment">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginBottom="37dp"
                android:background="#1E0297"
                android:gravity="center"
                android:text="Новое упражнение"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="15dp"
                android:layout_marginHorizontal="5dp"
                app:cardElevation="5dp"
                android:layout_marginBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="5dp">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginBottom="15dp"
                        android:gravity=""
                        android:text="Группа мышц"
                        android:textColor="@color/black"
                        android:textSize="33sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="35dp"
                        app:strokeColor="#5267D1"
                        app:strokeWidth="2dp"
                        app:cardElevation="3dp"
                        android:background="@color/white">

                        <Spinner
                            android:id="@+id/group"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:backgroundTint="@color/black" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginBottom="15dp"
                        android:gravity=""
                        android:text="Название упражнения"
                        android:textColor="@color/black"
                        android:textSize="33sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="35dp"
                        app:strokeColor="#5267D1"
                        app:strokeWidth="2dp"
                        app:cardElevation="3dp"
                        android:background="@color/white">
                    <EditText
                        android:id="@+id/name"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginHorizontal="13dp"
                        android:background="@color/white" />

                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginBottom="15dp"
                        android:gravity=""
                        android:text="Повторения/минуты"
                        android:textColor="@color/black"
                        android:textSize="33sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="35dp"
                        app:strokeColor="#5267D1"
                        app:strokeWidth="2dp"
                        app:cardElevation="3dp"
                        android:background="@color/white">

                        <Spinner
                            android:id="@+id/repetitions"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:backgroundTint="@color/black" />
                    </com.google.android.material.card.MaterialCardView>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="13dp"
                        android:layout_marginBottom="15dp"
                        android:gravity=""
                        android:text="Дополнительный вес"
                        android:textColor="@color/black"
                        android:textSize="33sp" />

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="300dp"
                        android:layout_height="60dp"
                        android:layout_marginHorizontal="13dp"
                        android:layout_marginBottom="30dp"
                        app:cardCornerRadius="35dp"
                        app:strokeColor="#5267D1"
                        app:strokeWidth="2dp"
                        app:cardElevation="3dp"
                        android:background="@color/white">

                        <Spinner
                            android:id="@+id/is_weight"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginStart="15dp"
                            android:backgroundTint="@color/black" />
                    </com.google.android.material.card.MaterialCardView>

                    <ImageView
                        android:id="@+id/add_new_train"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:src="@drawable/ic_accept"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"/>
                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>
</layout>